@startuml Web_Cinema_Use_Case_Diagram
!theme plain
title Web Cinema - Use Case Diagram

left to right direction

' Actors
actor "Khách Hàng" as Customer
actor "Nhân Viên" as Staff
actor "Quản Lý" as Admin
actor "Hệ Thống AI" as AI_System

' Packages for organization
package "Quản Lý Phim" {
    usecase "Xem Danh Sách Phim" as UC_ViewMovies
    usecase "Xem Chi Tiết Phim" as UC_ViewMovieDetail
    usecase "Thêm Phim Mới" as UC_AddMovie
    usecase "Chỉnh Sửa Phim" as UC_EditMovie
    usecase "Xóa Phim" as UC_DeleteMovie
    usecase "Tìm Kiếm Phim" as UC_SearchMovie
}

package "Quản Lý Vé & Ghế" {
    usecase "Chọn Suất Chiếu" as UC_SelectShowtime
    usecase "Chọn Ghế" as UC_SelectSeat
    usecase "Xem Sơ Đồ Ghế" as UC_ViewSeatMap
    usecase "Quản Lý Suất Chiếu" as UC_ManageShowtime
    usecase "Quản Lý Ghế" as UC_ManageSeat
}

package "Thanh Toán & Đơn Hàng" {
    usecase "Đặt Vé" as UC_BookTicket
    usecase "Thanh Toán" as UC_Payment
    usecase "Xem Lịch Sử Đơn Hàng" as UC_ViewHistory
    usecase "Quản Lý Đơn Hàng" as UC_ManageOrder
}

package "Tài Khoản & Xác Thực" {
    usecase "Đăng Ký" as UC_Register
    usecase "Đăng Nhập" as UC_Login
    usecase "Đăng Xuất" as UC_Logout
    usecase "Quản Lý Tài Khoản" as UC_ManageAccount
    usecase "Xem Hồ Sơ" as UC_ViewProfile
}

package "Đánh Giá & Bình Luận" {
    usecase "Bình Luận Phim" as UC_CommentMovie
    usecase "Đánh Giá Phim" as UC_RateMovie
    usecase "Xem Bình Luận" as UC_ViewComment
    usecase "Quản Lý Bình Luận" as UC_ManageComment
}

package "AI Chatbot" {
    usecase "Trò Chuyện với Chatbot" as UC_ChatAI
    usecase "Nhận Gợi Ý Phim" as UC_GetRecommendation
    usecase "Hỗ Trợ Khách Hàng" as UC_AISupport
    usecase "Phân Tích Cảm Xúc" as UC_SentimentAnalysis
}

package "Quản Lý Nhân Viên" {
    usecase "Quản Lý Nhân Viên" as UC_ManageStaff
    usecase "Xem Lịch Làm Việc" as UC_ViewSchedule
}

package "Chương Trình Khuyến Mãi" {
    usecase "Xem Ưu Đãi" as UC_ViewOffers
    usecase "Quản Lý Ưu Đãi" as UC_ManageOffers
    usecase "Áp Dụng Khuyến Mãi" as UC_ApplyPromo
}

